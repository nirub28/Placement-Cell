<p><b>Company Name:</b> <%= interview.company %></p>
<p><b>Interview Date:</b> <%= interview.date.toLocaleDateString() %></p>

<h4>Students:</h4>
<form action="/interviews/update-results" method="POST">
  <input type="hidden" name="interviewId" value="<%= interview._id %>">
  <% interview.students.forEach(function(student) { %>
    <div>
      <p><b>Name:</b> <%= student.name %></p>
      <p><b>Email:</b> <%= student.email %></p>
      <% if (!student.result) { %> 
         <label for="result-<%= student._id %>">Result:</label>
        <select id="result-<%= student._id %>" name="result-<%= student._id %>">
          <option value="On Hold">On Hold</option>
          <option value="PASS">PASS</option>
          <option value="FAIL">FAIL</option>
          <option value="Did not Attempt">Didn't Attempt</option>
        </select>
      <% } else { %> <!-- Render the result if it's already set -->
         <p><b>Result:</b> <%= student.result %></p>
      <% } %>
    </div>
  <% }); %>
  <button type="submit">Update Results</button>
</form> 
